@model The_Post.Models.VM.ArticleQueriesVM

@{
    ViewData["Title"] = "Index";
}

<div class="container-fluid">
    <div class="row justify-content-between gap-lg-5">
        <!-- Editors Choice - Left Sidebar -->
        <div class="col-lg-2 order-3 order-lg-1 flex-lg-grow-1">
            <div class="sticky-top" style="top: 2rem;">
                <h3 class=" mt-3 pb-2 mb-4 text-center" style=" border-bottom: 1px solid #A8A8A8;">Editor's Choice</h3>
                <div class="scrollable-sidebar-content">
                    @foreach (var article in Model.GetEditorsChoiceArticles)
                    {
                        <div class="card fpCard mt-1 mb-3" style=" border-bottom: 2px solid #A8A8A8; ">
                            <img src="@article.ImageMediumLink" data-original="@article.ImageOriginalLink" class="card-img-top" alt="@article.HeadLine">
                        <div class="card-body">
                                <h5 class="card-title">@article.HeadLine</h5>
                                <p class="card-text small">@article.LinkText</p>
                                <a asp-action="ViewArticle" asp-controller="Article" asp-route-articleID="@article.Id" class="btn btn-outline-primary btn-sm">Read More</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Latest Articles - Main Content -->
        <main class="col-lg-6 order-1 order-lg-2 flex-lg-grow-1">
            <h1 class="w-100 pb-2 mb-4 text-center" style="border-bottom: 1px solid #A8A8A8;color: #0A2472;">Latest News</h1>
            @foreach (var article in Model.TenLatestArticles)
            {
                <partial name="_ArticleListingPartial" model="article" />
            }
        </main>

        <!-- Most Popular - Right Sidebar -->
        <div class="col-lg-2 order-2 order-lg-3 flex-lg-grow-1" style="z-index:1000 !important;">
            <div class="sticky-top" style="top: 2rem;">
                <h3 class=" mt-3 pb-2 mb-4 text-center" style=" border-bottom: 1px solid #A8A8A8;">Most Popular</h3>
                <div class="scrollable-sidebar-content">
                    @foreach (var article in Model.GetFiveMostPopularArticles)
                    {
                        <div class="card fpCard mt-1 mb-3" style=" border-bottom: 2px solid #A8A8A8;" >
                            <div class="card-body">
                                <h5 class="card-title">@article.HeadLine</h5>
                                <p class="card-text small"><em>@article.LinkText</em></p>
                                <a asp-action="ViewArticle" asp-controller="Article" asp-route-articleID="@article.Id" class="stretched-link"></a>
                                <p class="card-footer small mb-0 pt-1 pb-1 text-body-secondary">
                                    <i class="fas fa-eye"></i> @article.Views Views
                                </p>

                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

