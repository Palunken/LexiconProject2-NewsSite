@model The_Post.Models.SubscriptionType

@{
    ViewData["Title"] = "Edit Subscription Type";
    Layout = "_LayoutForAdmin";
}

<div class="row mt-4">
    <div class="col-md-8 col-lg-6">
        <h2><strong><em>Edit Subscription Type</em></strong></h2>
        <p class="mb-3" style="border-bottom: 1px solid #A8A8A8;"></p>
    </div>
</div>

<form asp-action="Edit" autocomplete="off">
    <input type="hidden" asp-for="Id" />
    <div class="row ps-1">
        <!-- Full-width Column for Form Fields -->
        <div class="col-md-8 col-lg-6">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Row: Type Name -->
            <div class="row mt-4 pt-2">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="TypeName" class="form-control" placeholder="Type Name" />
                        <label asp-for="TypeName">Type Name</label>
                        <span asp-validation-for="TypeName" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Row: Description -->
            <div class="row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px;"></textarea>
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Row: Price -->
            <div class="row">
                <div class="col-12">
                    <div class="form-floating mb-3">
                        <input asp-for="Price" class="form-control" placeholder="Price" />
                        <label asp-for="Price">Price</label>
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Button Row: Side by Side -->
    <div class="row mt-3">
        <div class="col-12 d-flex">
            <button type="submit" class="btn btn-outline-success btn-sm me-2"
                    style="border-color: #0A2472; color: #0A2472;"
                    onmouseover="this.style.backgroundColor='#0A2472'; this.style.color='white';"
                    onmouseout="this.style.backgroundColor='transparent'; this.style.color='#0A2472';">
                <i class="fa fa-save p-2"></i> Save
            </button>
            <a class="btn btn-secondary btn-sm px-4 py-2" asp-controller="SubscriptionTypes" asp-action="Index">Back</a>
        </div>
    </div>
</form>
