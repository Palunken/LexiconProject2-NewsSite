
@model The_Post.Models.VM.CategoryPageVM

@{
    ViewData["Title"] = Model.Category;
}




<!--Div-structure that mimics the one in the Front page-->
<div class="container-fluid">
    <div class="row justify-content-between gap-lg-5">
        <div class="col-lg-2 order-3 order-lg-1 flex-lg-grow-1"></div>

        <main class="col-lg-6 order-1 order-lg-2 flex-lg-grow-1">
            <div class="mx-auto text-center ">
                @if (Model.Category == "Economy")
                {
                    <h1 class="w-100 pb-2 mb-2 text-center" style="border-bottom: 1px solid #A8A8A8;color: #0A2472;"> @Model.Category </h1>
                    @await Component.InvokeAsync("ElectricityPrices")
                    <a class="btn btn-custom-blue my-2 py-2" href="@Url.Action("HistoricalElectricityPrices", "News", new { date = "" })">View Historical Electricity Prices</a>
                }
                else{
                    <h1 class="w-100 pb-2 mb-4 text-center" style="border-bottom: 1px solid #A8A8A8;color: #0A2472;"> @Model.Category </h1>
                }
            </div>

            <!-- Category Articles listing -->
            @foreach (var article in Model.Articles)
            {
                <partial name="_ArticleListingPartial" model="article" />
            }
        </main>

        <div class="col-lg-2 order-2 order-lg-3 flex-lg-grow-1"></div>
    </div>
</div>