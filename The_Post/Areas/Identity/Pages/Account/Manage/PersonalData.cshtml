@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="row justify-content-center">
    <h3 class="form-title-Nav-Pages text-center">@ViewData["Title"]</h3> <!-- Centered and styled title -->
    <div class="col-md-6 form-container-Nav-Pages text-center">
        <!-- Styled container -->
        <p><strong>Your account contains personal data that you have given us. This page allows you to download or delete that data.</strong></p>
        <p class="text-danger"><strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong></p>

        <div class="d-flex justify-content-center gap-3">
            <!-- Adjusted spacing between buttons -->
            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="m-0">
                <button class="btn btn-primary" type="submit" style="background-color: #0056b3;">Download</button>
            </form>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">Delete</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}