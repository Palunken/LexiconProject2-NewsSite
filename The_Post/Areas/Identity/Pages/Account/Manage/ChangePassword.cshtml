@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Change password";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<partial name="_StatusMessage" for="StatusMessage" />

<div class="row justify-content-center">
    <h3 class="text-center form-title-Nav-Pages">@ViewData["Title"]</h3> <!-- Centered title -->
    <div class="col-md-6 form-container-Nav-Pages">
        <!-- Applied form container styling -->
        

        <form id="change-password-form" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger-Nav-Pages" role="alert"></div>

            <div class="form-floating-Nav-Pages mb-3">
                <input asp-for="Input.OldPassword" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Please enter your old password." />
                <label asp-for="Input.OldPassword" class="form-label"></label>
                <span asp-validation-for="Input.OldPassword" class="text-danger-Nav-Pages"></span>
            </div>

            <div class="form-floating-Nav-Pages mb-3">
                <input asp-for="Input.NewPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your new password." />
                <label asp-for="Input.NewPassword" class="form-label"></label>
                <span asp-validation-for="Input.NewPassword" class="text-danger-Nav-Pages"></span>
            </div>

            <div class="form-floating-Nav-Pages mb-3">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your new password." />
                <label asp-for="Input.ConfirmPassword" class="form-label"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger-Nav-Pages"></span>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-custom-blue">Update password</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}